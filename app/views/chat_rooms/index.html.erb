<div id="chatroom_container" class="row bg-dark text-light">
  <h2 class="text-center">This is your chatroom space</h2>
  <div id="side_panel" class="col-md-4 col-sm-4" >
    <h6><%= current_user.email %></h6>

    <h4>Users</h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>

    <h4>Rooms</h4>
    <%= turbo_stream_from "chat_rooms" %>
    <div id="chat_rooms">
      <%= render @chat_rooms %>
    </div>
    <%= render 'layouts/new_room_form' %>
  </div>

  <div id="room_container" class="col-md-8 col-sm-8 bg-dark text-light" >
    <% if @single_room %>
      <div id="single_room">
        <h4 class="text-center"> <%=  @user&.email || @single_room.title %> </h4>
        <hr>
        <%= turbo_stream_from @single_room %>
        <div id="messages" data-controller="scroll">
          <%= render @messages %>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>


